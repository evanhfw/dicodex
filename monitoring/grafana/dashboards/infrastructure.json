{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "title": "CPU Usage per Container",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "custom": { "fillOpacity": 20, "lineWidth": 2 }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{id=~\".+student-dashboard.+\"}[5m])",
          "legendFormat": "{{ id }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Memory Usage per Container",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": { "fillOpacity": 20, "lineWidth": 2 }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{id=~\".+student-dashboard.+\"}",
          "legendFormat": "{{ id }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Network Receive (bytes/sec)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": { "fillOpacity": 15, "lineWidth": 2 }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{id=~\".+student-dashboard.+\"}[5m])",
          "legendFormat": "{{ id }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Network Transmit (bytes/sec)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": { "fillOpacity": 15, "lineWidth": 2 }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(container_network_transmit_bytes_total{id=~\".+student-dashboard.+\"}[5m])",
          "legendFormat": "{{ id }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Container Restarts",
      "type": "stat",
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "container_start_time_seconds{id=~\".+student-dashboard.+\"}",
          "legendFormat": "{{ id }}",
          "refId": "A",
          "instant": true
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background"
      }
    },
    {
      "title": "Container Uptime",
      "type": "stat",
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 20 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 300 },
              { "color": "green", "value": 3600 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "time() - container_start_time_seconds{id=~\".+student-dashboard.+\"}",
          "legendFormat": "{{ id }}",
          "refId": "A",
          "instant": true
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background"
      }
    }
  ],
  "schemaVersion": 39,
  "tags": ["infrastructure", "docker"],
  "templating": {
    "list": [
      {
        "current": {},
        "hide": 0,
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus"
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "title": "Infrastructure",
  "uid": "infrastructure",
  "version": 1
}
